<p id="notice"><%= notice %></p>


<%=form_tag emails_messages_path, method: 'get' do%>
    <strong>Search for previously emails</strong>
    <br>
    <%=email_field_tag :email, '',placeholder: 'email', required: true %>
    <br>
    <%=submit_tag :search %>
<%end%>

<h1>Listing Emails from database</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Email</th>
      <th>Message</th>
      <th>Campaign</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.subject %></td>
        <td><%= message.email %></td>
        <td><%= message.message %></td>
        <td><%= message.campaign_id %></td>
        <td><%= link_to 'Show', message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
